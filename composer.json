{
    "name": "binary-hype/monitoring",
    "description": "A PHP/Laravel package to send errors, logs, and heartbeats to the Monitoring Monolith",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "monitoring",
        "error-tracking",
        "logging",
        "heartbeat"
    ],
    "authors": [
        {
            "name": "Binary Hype",
            "email": "info@binary-hype.com"
        }
    ],
    "homepage": "https://github.com/binary-hype/monitoring",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "laravel/framework": "^10.0|^11.0|^12.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0"
    },
    "autoload": {
        "psr-4": {
            "BinaryHype\\Monitoring\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinaryHype\\Monitoring\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "BinaryHype\\Monitoring\\MonitorServiceProvider"
            ],
            "aliases": {
                "Monitor": "BinaryHype\\Monitoring\\Facades\\Monitor"
            }
        }
    },
    "suggest": {
        "laravel/framework": "Required for Laravel integration and auto-discovery"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
